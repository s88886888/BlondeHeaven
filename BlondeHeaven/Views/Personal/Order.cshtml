@*@model List<LanZhouBeefNoodles.Models.Noodle>*@
@model BlondeHeaven.ViewModels.Base.OrderModelView

@{ ViewData["Title"] = "Index"; }

<h2>我的订单</h2>
@foreach (var noodle in Model.Orders)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3 class="pull-right">￥@noodle.DateTime</h3>
                <a asp-controller="Order"
                   asp-action="Details"
                   asp-route-id="@noodle.Id">详细</a>
                <p>@noodle.Price</p>
                <p>@noodle.Name</p>
            </div>
        </div>
    </div>}
