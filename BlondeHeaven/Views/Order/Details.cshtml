@*@model List<LanZhouBeefNoodles.Models.Noodle>*@
@model BlondeHeaven.ViewModels.Base.OrderModelView

@{ ViewData["Title"] = "详细信息"; }

<h2>订单详细</h2>

@foreach (var noodle in Model.Orders)
{

    <div class="caption">
        <h3>￥@noodle.Price</h3>
        <p>@noodle.DateTime</p>
        <p>@noodle.Name</p>
        <p>--------------------------------------------------------------------</p>
    </div>
}
@foreach (var noodles in Model.Commoditys)
{
    <div>
        <h3>￥@noodles.Name</h3>
        <p>@noodles.Price</p>
        <p>@noodles.CreateCommodity</p>
        <p>@noodles.Photo</p>
    </div>
}


